{
  "name": "BugClicker",
  "version": "1.0.0",
  "main": "main.js",
  "description": "",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yourdomain.bugclicker",
    "productName": "BugClicker",
    "asar": true,
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^37.0.0",
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoiska/interaktivesysteme.git"
  },
  "bugs": {
    "url": "https://github.com/zoiska/interaktivesysteme/issues"
  },
  "homepage": "https://github.com/zoiska/interaktivesysteme#readme",
  "keywords": []
}
